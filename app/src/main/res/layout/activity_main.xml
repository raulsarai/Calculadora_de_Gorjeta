<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_gorjeta" />

    <EditText
        android:id="@+id/valorConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="DIGITE O VALOR DA CONTA ex. 37.50"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textPorcentagem"
        android:layout_width="72dp"
        android:layout_height="34dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:hint="0%"
        android:textAlignment="center"
        android:textColorHint="@color/laranja_escuro"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="88dp"
        android:hint="Gorjeta"
        android:textAlignment="textStart"
        android:textColorHint="@color/laranja_escuro"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/textGorjeta"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="88dp"
        android:background="@color/laranja_escuro"
        android:hint="R$0.00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="238dp"
        android:layout_height="29dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="156dp"
        android:background="@color/laranja_escuro"
        android:hint="R$0.00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="77dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="156dp"
        android:hint="TOTAL"
        android:textAlignment="textStart"
        android:textColorHint="@color/laranja_escuro"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />

    <SeekBar
        android:id="@+id/seekBarPorcentagem"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:max="13"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textPorcentagem"
        app:layout_constraintTop_toBottomOf="@+id/valorConta" />
</androidx.constraintlayout.widget.ConstraintLayout>